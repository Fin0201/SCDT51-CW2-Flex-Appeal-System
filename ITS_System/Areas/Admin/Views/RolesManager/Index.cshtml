@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


@{
    ViewData["Title"] = "Roles Manager Page";
}

    <div class="text-center">
        <h1 class="display-4">Roles Manager</h1>  

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger mx-2">@ViewBag.Message</div>
        }
    
    @*Creates a text field and button prompting the user to enter the role name*@
    <form method="post" asp-action="AddRole" asp-controller="RolesManager">
        <div class="input-group">
            <input name="roleName" class="form-control w-25" />
            <span class="input-group-btn">
                <button type="submit" class="btn-info btn">Add New Role</button>
            </span>
        </div>
    </form>

    @*Creates the table headings*@
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>

            @*Loops through each item in the database and displays them seperately to the user*@
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-danger" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a>
                    </td>
                </tr>
            }


        </tbody>
    </table>


</div>





