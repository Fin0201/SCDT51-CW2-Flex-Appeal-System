@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

@*Creates a card asking if the user would like to download or delete their personal data*@
<div class="card" style="width: 30rem;">
    <ul class="list-group list-group-flush">
        <li class="list-group-item"><h3>@ViewData["Title"]</h3></li>
        <li class="list-group-item">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <h5 class="mt-3"><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></h5>
        </li>
        <li class="list-group-item">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="w-100 btn btn-primary" type="submit">Download</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-danger mt-3">Delete</a>
        </li>
    </ul>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
